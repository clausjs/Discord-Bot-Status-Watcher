{
    "compilerOptions": {
        "allowJs": true,
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2020",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "strict": true,
        "types": ["node"],
    },
    "include": ["**/*.ts"],
    "exclude": [
        "node_modules",
        "types"
    ]
}